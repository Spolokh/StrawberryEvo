[HEADER]
    <h2>#{category}</h2>
    <br clear="both" />
[/HEADER]
<li>
	<figure>
		<img loading="lazy" src="#{image}" alt="" />
		<a class="caption" href="#{link}">
			<b>#{title}</b>
			<div class="story">
				<div class="views"><i class="icon-eye-open"></i> &nbsp; #{views}</div>
				<div class="comm"><i class="icon-comment-alt"></i> &nbsp; #{comms}</div>
				<br clear="both" />
				#{short}
			</div>
		</a>
	</figure>
</li>