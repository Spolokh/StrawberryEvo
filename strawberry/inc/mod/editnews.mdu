	$righ_have or exit (t('Действие запрещено'));

    run_actions('mass-deleted');
	
    $query = $sql->select(['news', 'select' => ['id', 'image'], 'where' => ['id = ['.join(',', $selected_news).']']]);
	
    foreach ($query as $row){
        
		$sql->delete(['news', 'where'  => $row['id']]);
