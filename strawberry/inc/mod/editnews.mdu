			unlink(UPLOADS.'/posts/'.$row['image']);
		}
		$moved_news++;
    }
	msg('info', t('Удаление записей'), t('<b>%deleted</b> из <b>%selected</b> выбранных вами записей было удалено', ['deleted' => $moved_news, 'selected' => count($selected_news)]), $PHP_SELF.'?mod=editnews');
