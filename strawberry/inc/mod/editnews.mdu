function xhr_send(file, e) {
	
	if (!file) {
		return;
	}
	
	var ajax = getXmlHttp();

	ajax.onreadystatechange = function(){
		if ( this.readyState == 4 ) {
			$(e).src = this.responseText;
		}
	}
		
