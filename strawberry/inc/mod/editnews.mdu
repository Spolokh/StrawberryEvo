function makeList($array, $every = 0)
{
	static $i = 0, $result;
			
    if ($i == 0){
        $result = "<tr>\n";
    }

    foreach ($array as $k => $v){
		
		if (is_array($v)){
        	$i--;
        	$result .= '<tr '.cute_that().'>';
        	makeList($v, $every);
        } else {
        	$result .= (($every and $k%$every == 0) ? "<tr>" : "");
        	$result .= '<td height="24">'.$v.'</td>'."\n";
        }
	}  
	$i++; 
	return $result;
}
